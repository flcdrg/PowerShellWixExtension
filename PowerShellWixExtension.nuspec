<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
    <metadata minClientVersion="2.7">
        <id>PowerShellWixExtension</id>
        <version>4.0.0</version>
        <title>Wix Extension for PowerShell</title>
